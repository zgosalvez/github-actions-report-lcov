{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "correctness": {
        "all": true,
        "noUnusedVariables": "error"
      }
		}
	},
  "formatter": {
    "indentSize": 2,
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineWidth": 120,
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingComma": "all"
    }
  }
}
